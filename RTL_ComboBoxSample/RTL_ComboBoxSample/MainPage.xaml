                    <x:String>Alex</x:String>
                    <x:String>Carrey</x:String>
                    <x:String>Daniel</x:String>
                    <x:String>Guptil</x:String>
                    <x:String>Hentry</x:String>
                    <x:String>James</x:String>
                    <x:String>Kevin</x:String>
                    <x:String>Kabil</x:String>
                    <x:String>Mark</x:String>
                    <x:String>Mathew</x:String>
                    <x:String>Nelson</x:String>
                    <x:String>Nancy</x:String>
                </ListCollection:List>
            </combobox:SfComboBox.ComboBoxSource>
        </combobox:SfComboBox>
    </StackLayout>


</ContentPage>
